@section Styles {
    <link rel="stylesheet" href="~/css/game-form.css" />
}


@{
    ViewData["Title"] = "Stwórz Gre";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" for="GameDate">Data Gry</label>
                <input class="form-control" type="date" id="GameDate" name="GameDate" required>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Team1ID">Drużyna 1</label>
                <select class="form-control" id="Team1ID" name="Team1ID" asp-items="@ViewBag.Team1ID" required></select>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Team2ID">Drużyna 2</label>
                <select class="form-control" id="Team2ID" name="Team2ID" asp-items="@ViewBag.Team2ID" required></select>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="FinalScore">Wynik końcowy</label>
                <input class="form-control" type="text" id="FinalScore" name="FinalScore">
            </div>
            <div class="form-group mb-3">
                <label for="Description">Opis</label>
                <textarea class="form-control" id="Description" name="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Stwórz gre</button>
        </form>
    </div>
</div>
