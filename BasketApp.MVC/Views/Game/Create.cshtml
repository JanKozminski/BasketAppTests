@using BasketApp.Application.GameExtensions.Commands.CreateGame;

@model CreateGameCommand

@section Styles {
    <link rel="stylesheet" href="~/css/game-form.css" />
}


@{
    ViewData["Title"] = "Stwórz Gre";
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in ViewData.ModelState[""].Errors)
        {
            @error.ErrorMessage <br />
        }
    </div>
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="GameDate">Data Gry</label>
                <input class="form-control" type="date" asp-for="GameDate" required>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Team1ID">Drużyna 1</label>
                <select class="form-control" asp-for="Team1ID" asp-items="@ViewBag.Team1ID" required></select>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Team2ID">Drużyna 2</label>
                <select class="form-control" asp-for="Team2ID" asp-items="@ViewBag.Team2ID" required></select>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="FinalScore">Wynik końcowy</label>
                <input class="form-control" type="text" asp-for="FinalScore" required>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description">Opis</label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Stwórz gre</button>
        </form>
    </div>
</div>
